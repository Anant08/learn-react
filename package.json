{
  "name": "learn-react",
  "private": true,
  "version": "1.0.0",
  "description": "The best resources for you to learn React",
  "keywords": [],
  "homepage": "https://learn-reactjs.netlify.com/",
  "main": "src/index.js",
  "dependencies": {
    "@reach/router": "1.2.1",
    "d3": "5.9.1",
    "emotion": "10.0.9",
    "jest-dom": "3.1.2",
    "prop-types": "15.7.2",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-emotion": "10.0.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-testing-library": "6.0.0",
    "react-transition-group": "2.6.0",
    "vanilla-tilt": "1.6.1"
  },
  "devDependencies": {
    "cross-spawn": "6.0.5",
    "eslint-plugin-react-hooks": "1.5.0",
    "husky": "1.3.1",
    "inquirer": "6.2.2",
    "is-ci": "2.0.0",
    "jest-in-case": "1.0.2",
    "node": "10.15.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "react-scripts": "2.1.8",
    "replace-in-file": "3.4.4",
    "test-data-bot": "0.8.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "setup": "node ./scripts/verify && node ./scripts/install && npm run validate && node ./scripts/autofill-feedback-email.js",
    "lint": "eslint .",
    "validate": "npm-run-all --parallel build test:coverage lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/exercises-final/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
